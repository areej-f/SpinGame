<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_layouts"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MyEarnings">


    <TextView
        android:id="@+id/txtEarnings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="127dp"
        android:layout_marginRight="124dp"
        android:layout_marginTop="92dp"
        android:text="Total Earnings"
        android:fontFamily="@font/inter_bold"
        android:textSize="20sp"
        android:textColor="#A4A4A4"/>
    <TextView
        android:id="@+id/txtAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txtEarnings"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="117dp"
        android:layout_marginRight="122dp"
        android:layout_marginTop="3dp"
        android:text="$ 1.7"
        android:fontFamily="@font/inter_bold"
        android:textSize="70sp"
        android:textColor="#FFFFFF"/>
    <TextView
        android:id="@+id/txtTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txtAmount"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="121dp"
        android:layout_marginRight="129dp"
        android:layout_marginTop="54dp"
        android:text="Total Diamond"
        android:fontFamily="@font/inter_bold"
        android:textSize="20sp"
        android:textColor="#A4A4A4"/>
    <TextView
        android:id="@+id/txtNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txtTotal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="121dp"
        android:layout_marginRight="129dp"
        android:layout_marginTop="7dp"
        android:text="1700"
        android:textStyle="bold"
        android:fontFamily="@font/inter_regular"
        android:textSize="50sp"
        android:textColor="#FFFFFF"/>
    <TextView
        android:id="@+id/txtPayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txtNo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="158dp"
        android:layout_marginRight="166dp"
        android:layout_marginTop="50dp"
        android:text="Payout"
        android:textStyle="bold"
        android:fontFamily="@font/inter_bold"
        android:textSize="20sp"
        android:textColor="#A4A4A4"/>

    <LinearLayout
        android:id="@+id/llImage"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@drawable/google_bg"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="37dp"
        android:layout_marginLeft="160dp"
        android:layout_marginRight="168dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPayout">

        <ImageView
            android:id="@+id/imgPaytm"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:layout_margin="6dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"

            android:src="@drawable/paytm" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>