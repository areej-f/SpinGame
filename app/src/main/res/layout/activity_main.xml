<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_layouts"
    tools:context=".MainActivity">


    <LinearLayout
            android:id="@id/cardViewSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/cardview_bg"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="33dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="3dp"
                android:layout_marginRight="75dp"
                android:fontFamily="@font/inter_regular"
                android:text="Welcome to Quizzy"
                android:textColor="#CFCFCF"
                android:textSize="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="75dp"
                android:fontFamily="@font/inter_bold"
                android:paddingBottom="22dp"
                android:text="Letâ€™s\nSign In !"
                android:textColor="#FFFFFF"
                android:textSize="50dp" />
        </LinearLayout>


    <EditText
        android:id="@+id/edtTxtName"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="41dp"
        android:background="@drawable/edit_text_background"
        android:hint="Name"
        android:fontFamily="@font/inter_regular"
        android:paddingLeft="25dp"
        android:textColorHint="#fff"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewSignIn" />

    <EditText
        android:id="@+id/edtTxtEmail"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="41dp"
        android:alpha="1"
        android:background="@drawable/edit_text_background"
        android:hint="Email"
        android:paddingLeft="25dp"
        android:textColorHint="#CFCFCF"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtTxtName" />

    <EditText
        android:id="@+id/edtTxtPassword"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="41dp"
        android:background="@drawable/edit_text_background"
        android:hint="Password"
        android:paddingLeft="25dp"
        android:textColorHint="#CFCFCF"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtTxtEmail" />

    <EditText
        android:id="@+id/edtTxtReferralCode"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="41dp"
        android:background="@drawable/edit_text_background"
        android:hint="Referral Code"
        android:paddingLeft="25dp"
        android:textColorHint="#CFCFCF"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtTxtPassword" />

    <TextView
        android:id="@+id/txtSignIn"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="34dp"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:text="Sign In"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:fontFamily="@font/inter_bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtTxtReferralCode" />

    <TextView
        android:id="@+id/txtDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="or Login with "
        android:textStyle="bold"
        android:textColor="#CFCFCF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSignIn" />
    <LinearLayout
        android:id="@+id/llImage"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/google_bg"
        app:cardCornerRadius="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDesc">

        <ImageView
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:layout_margin="6dp"
            android:padding="6dp"
            android:src="@drawable/google" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:textStyle="bold"
        android:text="Privacy Policy "
        android:textColor="#CFCFCF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llImage" />


</androidx.constraintlayout.widget.ConstraintLayout>