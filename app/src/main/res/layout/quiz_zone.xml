<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="37dp"
    android:layout_marginRight="37dp"
    android:layout_marginTop="13dp"
    android:paddingBottom="18dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/landing_page_card_bg">
    <TextView
        android:id="@+id/txtZone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiz Zone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="25sp"
        android:textColor="#fff"
        android:fontFamily="@font/inter_bold"/>

    <LinearLayout
        android:id="@+id/llGeneral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="18dp"

        android:background="@drawable/landing_page_card_bg"
        app:layout_constraintTop_toBottomOf="@+id/txtZone">
        <ImageView
            android:layout_width="44dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="21dp"
            android:src="@drawable/img_gk"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="9dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:backgroundTint="#747474"
                android:textSize="18sp"
                android:textColor="#fff"
                android:fontFamily="@font/inter_bold"
                android:text="General Knowledge"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:fontFamily="@font/inter_bold"
                android:text="120+ Ques"/>
        </LinearLayout>
    </LinearLayout>

<!--  Section 2  -->
    <LinearLayout
        android:id="@+id/llScience"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/landing_page_card_bg"
        app:layout_constraintTop_toBottomOf="@+id/llGeneral">
        <ImageView
            android:layout_width="44dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="21dp"
            android:src="@drawable/img_science"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="57dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="9dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#747474"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textColor="#fff"
                android:fontFamily="@font/inter_bold"
                android:text="Science"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:fontFamily="@font/inter_bold"
                android:text="120+ Ques"/>
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnViewAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/llScience"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        android:text="View all"
        android:layout_marginBottom="18dp"
        android:textSize="12sp"
        android:fontFamily="@font/inter_bold"
        android:backgroundTint="#80939292"/>

</androidx.constraintlayout.widget.ConstraintLayout>