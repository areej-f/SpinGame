<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Spin"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_layouts">


    <LinearLayout
        android:id="@+id/headerSpin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/survey_bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="39dp"
            android:textSize="43dp"
            android:textColor="@color/white"
            android:text="Lucky Spin"/>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFreeSpin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="300dp"
        app:layout_constraintTop_toBottomOf="@+id/headerSpin"
        android:backgroundTint="#41F849"
        app:cornerRadius="18dp"
        android:textSize="30sp"
        android:fontFamily="@font/inter_bold"
        android:textAllCaps="true"
        android:text="FREE SPIN"/>


    <ImageView
        android:id="@+id/imgWatch"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:padding="8dp"
        android:layout_marginLeft="170dp"
        android:layout_marginRight="178dp"
        android:src="@drawable/youtube"
        app:layout_constraintTop_toBottomOf="@+id/btnFreeSpin"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/video_bg"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="86dp"
        android:textColor="@color/white"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFreeSpin"
        android:fontFamily="@font/inter_bold"
        android:textAlignment="center"
        android:text="Watch Add\nFor Free Spin"
        android:textSize="8sp"/>


</androidx.constraintlayout.widget.ConstraintLayout>