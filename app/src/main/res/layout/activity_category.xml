<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Category"
    android:background="@drawable/background_layouts">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTop="parent">

        <TextView
            android:id="@+id/txtWallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/inter_bold"
            android:text="Category"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/imgClose"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="17dp"
            android:layout_marginRight="23dp"
            android:src="@drawable/close" />
    </RelativeLayout>

    <!--    Category General Knowedge-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <LinearLayout
            android:id="@+id/catGeneral"
            android:layout_width="163dp"
            android:layout_height="153dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="207dp"
            android:background="@drawable/edit_text_background"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <ImageView
                android:layout_width="57dp"
                android:layout_height="53dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/img_gk" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:gravity="center"
                android:text="General Knowledge"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:fontFamily="@font/inter_bold"
                android:text="120+ Ques"
                android:textColor="#A3A2A2"
                android:textSize="15sp" />
        </LinearLayout>

        <!--        Category Science-->
        <LinearLayout
            android:id="@+id/catScience"
            android:layout_width="163dp"
            android:layout_height="153dp"
            android:layout_alignStart="@+id/catGeneral"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="207dp"
            android:layout_marginTop="160dp"
            android:layout_marginRight="23dp"
            android:background="@drawable/edit_text_background"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="57dp"
                android:layout_height="53dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/img_science" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="Science"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:fontFamily="@font/inter_bold"
                android:text="120+ Ques"
                android:textColor="#A3A2A2"
                android:textSize="15sp" />
        </LinearLayout>


        <!--        Category Movies-->
        <LinearLayout
            android:id="@+id/catMovies"
            android:layout_width="163dp"
            android:layout_height="153dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="245dp"
            android:layout_marginRight="207dp"
            android:background="@drawable/edit_text_background"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/catScience">

            <ImageView
                android:layout_width="57dp"
                android:layout_height="53dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/pc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="Movies"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:fontFamily="@font/inter_bold"
                android:text="120+ Ques"
                android:textColor="#A3A2A2"
                android:textSize="15sp" />


        </LinearLayout>



        <!--        Category Math-->
        <LinearLayout
            android:id="@+id/catMath"
            android:layout_width="1633dp"
            android:layout_height="153dp"
            android:layout_alignStart="@+id/catMovies"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="207dp"
            android:layout_marginTop="380dp"
            android:layout_marginRight="23dp"
            android:background="@drawable/edit_text_background"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="57dp"
                android:layout_height="53dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/doodle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="Math"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:fontFamily="@font/inter_bold"
                android:text="120+ Ques"
                android:textColor="#A3A2A2"
                android:textSize="15sp" />

        </LinearLayout>


        <!--        Category Sports-->
        <LinearLayout
            android:id="@+id/catSports"
            android:layout_width="163dp"
            android:layout_height="153dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="430dp"
            android:layout_marginRight="207dp"
            android:background="@drawable/edit_text_background"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/catMath">

            <ImageView
                android:layout_width="57dp"
                android:layout_height="53dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/img_sports" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="Sports"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:fontFamily="@font/inter_bold"
                android:text="120+ Ques"
                android:textColor="#A3A2A2"
                android:textSize="15sp" />


        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>