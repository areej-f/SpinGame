<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_layouts">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTop="parent">

        <TextView
            android:id="@+id/txtWallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="17dp"
            android:fontFamily="@font/inter_bold"
            android:text="Wallet"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/imgClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="23dp"
            android:layout_marginRight="35dp"
            android:src="@drawable/close" />
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/radioGrp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="21dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/unselected_toggle_bg"
        android:checkedButton="@+id/btnMyEarnings"

        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <RadioButton
            android:id="@+id/btnMyEarnings"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/toggle_bg"
            android:button="@null"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:paddingTop="19dp"
            android:paddingBottom="19dp"
            android:text="My Earnings"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/offer"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/unselected_toggle_bg"
            android:button="@null"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:paddingTop="19dp"
            android:paddingBottom="19dp"
            android:text="Transaction"
            android:textColor="#A4A4A4"
            android:textSize="20sp" />
    </RadioGroup>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/radioGrp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

    </FrameLayout>



    <TextView
        android:id="@+id/txtEarnings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="127dp"
        android:layout_marginTop="92dp"
        android:layout_marginRight="124dp"
        android:fontFamily="@font/inter_bold"
        android:text="Total Earnings"
        android:textColor="#A4A4A4"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGrp" />

    <TextView
        android:id="@+id/txtAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="117dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="122dp"
        android:fontFamily="@font/inter_bold"
        android:text="$ 1.7"
        android:textColor="#FFFFFF"
        android:textSize="70sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEarnings" />

    <TextView
        android:id="@+id/txtTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="121dp"
        android:layout_marginTop="54dp"
        android:layout_marginRight="129dp"
        android:fontFamily="@font/inter_bold"
        android:text="Total Diamond"
        android:textColor="#A4A4A4"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAmount" />

    <TextView
        android:id="@+id/txtNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="121dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="129dp"
        android:fontFamily="@font/inter_regular"
        android:text="1700"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTotal" />

    <TextView
        android:id="@+id/txtPayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="158dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="166dp"
        android:fontFamily="@font/inter_bold"
        android:text="Payout"
        android:textColor="#A4A4A4"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNo" />

    <LinearLayout
        android:id="@+id/llImage"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="37dp"
        android:layout_marginRight="168dp"
        android:background="@drawable/google_bg"
        app:cardCornerRadius="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPayout">

        <ImageView
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:layout_margin="6dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"

            android:src="@drawable/paytm" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>