<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Logout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_layouts">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTop="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/imgClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:layout_marginRight="35dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/close"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/imgLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header"
        android:layout_marginLeft="110dp"
        android:layout_marginRight="71dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/prof_img"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="20dp"
        android:layout_marginLeft="41dp"
        android:layout_marginRight="31dp"
        app:layout_constraintTop_toBottomOf="@+id/imgLogout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/button_background"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="35dp"
            android:gravity="center"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="Are you sure!!\nYou want to Log Out ?"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_logout"
            android:paddingTop="10dp"
            android:gravity="center"
            android:layout_marginTop="9dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:layout_marginRight="60dp"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:fontFamily="@font/inter_bold"
                android:text="Yes"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#8A8989"/>
            <TextView
                android:id="@+id/txtNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:paddingBottom="5dp"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:fontFamily="@font/inter_bold"
                android:text="No"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>